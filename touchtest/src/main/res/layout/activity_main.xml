<?xml version="1.0" encoding="utf-8"?>
<com.yqq.touchtest.MyWidget.MyRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:yqq="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/face"
    android:backgroundTint="#6f6f6f"
    android:backgroundTintMode="screen"
    tools:context="com.yqq.touchtest.Activity.MainActivity">

    <com.yqq.touchtest.MyWidget.MyTextView
        android:id="@+id/mytextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stopRunning Animation!" />
    <Button
        android:id="@+id/show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ll_layer_item_select_bg"
        android:text="show dialog!" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="请输入信息"
        android:layout_below="@+id/mytextview"
        android:id="@+id/editText"
        android:background="@drawable/frame_edittext"
        android:textColorHint="#e1e1e1"
        android:textColor="#565656"
        android:maxLines="1"
        />
    <com.yqq.touchtest.MyWidget.MyEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:layout_below="@+id/editText"
        />
    <com.yqq.touchtest.MyWidget.MyEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        android:id="@+id/password"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="longClick"
        android:layout_below="@+id/password"

        android:background="@drawable/ll_layer_item_select_bg"
        android:id="@+id/bt"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click"
        android:layout_below="@+id/bt"
        android:layout_marginTop="1dp"
        android:background="@drawable/ll_layer_item_select_bg"
        android:id="@+id/bt_one"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show tips"
        android:layout_below="@+id/bt_one"
        android:layout_marginTop="1dp"
        android:background="@drawable/ll_layer_item_select_bg"
        android:id="@+id/bt_two"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To Second"
        android:layout_below="@+id/bt_two"
        android:layout_marginTop="1dp"
        android:background="@drawable/ll_layer_item_select_bg"
        android:id="@+id/bt_three"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To Three"
        android:layout_below="@+id/bt_three"
        android:layout_marginTop="1dp"
        android:background="@drawable/ll_layer_item_select_bg"
        android:id="@+id/bt_four"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To Scroll"
        android:layout_below="@+id/bt_four"
        android:layout_marginTop="1dp"
        android:background="@drawable/ll_layer_item_select_bg"
        android:id="@+id/bt_five"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RoundImg"
        android:layout_below="@+id/bt_five"
        android:layout_marginTop="1dp"
        android:background="@drawable/ll_layer_item_select_bg"
        android:id="@+id/bt_six"
        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/password"
        android:id="@+id/img"
        android:tint="@color/colorPrimaryDark"
        android:tintMode="add"
        android:src="@drawable/timg"
        android:visibility="gone"
        />



    <com.yqq.touchtest.MyWidget.ProgressView
        android:id="@+id/progressView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt"
        android:layout_centerInParent="true"
        android:elevation="2dp"
        />

    <com.yqq.touchtest.MyWidget.LayerBottom
        android:id="@+id/layer_bottom_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        />
</com.yqq.touchtest.MyWidget.MyRelativeLayout>
