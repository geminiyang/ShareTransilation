<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/tab_menu"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:layout_marginTop="6dp"
            android:textSize="12sp"
            android:drawableTop="@drawable/tab_menu_time"
            android:gravity="center"
            android:textColor="@drawable/tab_menu_text_deal"
            android:text="时间"/>

        <TextView
            android:id="@+id/comment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="6dp"
            android:textSize="12sp"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/tab_menu_comment"
            android:gravity="center"
            android:textColor="@drawable/tab_menu_text_deal"
            android:text="评论"/>

        <TextView
            android:id="@+id/heart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="6dp"
            android:textSize="12sp"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/tab_menu_heart"
            android:gravity="center"
            android:textColor="@drawable/tab_menu_text_deal"
            android:text="心情"/>

        <TextView
            android:id="@+id/locate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:layout_marginTop="6dp"
            android:textSize="12sp"
            android:drawableTop="@drawable/tab_menu_locate"
            android:gravity="center"
            android:textColor="@drawable/tab_menu_text_deal"
            android:text="定位"/>

    </LinearLayout>

    <View
        android:id="@+id/div_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:background="@color/light_grey"
        android:layout_above="@id/tab_menu"/>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tab_menu"
        android:background="@color/transparent">
    </FrameLayout>

</RelativeLayout>
