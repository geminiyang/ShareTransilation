<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="2dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/rl"
    tools:context="com.yqq.activitytest.B">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b"
        android:text="to C"
        android:elegantTextHeight="true"
        android:elevation="10dp"
        />

    <Button
        android:text="call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b"
        android:id="@+id/call" />

    <Button
        android:text="SELECT_Method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/b"
        android:id="@+id/change" />

    <Button
        android:text="sdcard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/call"
        android:id="@+id/sdcard" />

    <EditText
        android:layout_below="@+id/sdcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et"
        android:elegantTextHeight="true"
        />

    <Button
        android:text="First"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et"
        android:id="@+id/transition" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et"
        android:layout_toEndOf="@+id/transition"
        android:layout_marginStart="14dp"
        android:layout_marginTop="11dp"
        android:id="@+id/progressBar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv"
        android:layout_below="@+id/transition"
        android:text="ABCDEFG"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv2"
        android:layout_below="@+id/transition"
        android:layout_alignParentRight="true"
        android:text="OPQTSTIV"
        />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/orbz"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="20dp"
        android:id="@+id/ball"
        />
    <LinearLayout
        android:id="@+id/ll_container_transition_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv"
        android:gravity="center"
        android:orientation="vertical"
        >

        </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_container_path_motion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_container_transition_name"
        android:layout_alignParentStart="true">


        <Button
            android:id="@+id/btn_path_motion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Path Motion"/>
    </FrameLayout>


</RelativeLayout>
