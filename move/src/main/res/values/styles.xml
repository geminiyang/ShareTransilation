<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/blue</item>
        <item name="android:windowAnimationStyle">@style/SlideRightAnimation</item>
    </style>

    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_in</item>
        <item name="android:windowExitAnimation">@anim/push_out</item>
    </style>

    <style name="PopupSlideFromRightAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <style name="PopupSlideFromBottomAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="SlideRightAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
        <item name="android:taskOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@anim/slide_out_right</item>
        <item name="android:taskToFrontEnterAnimation">@anim/slide_in_right</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@anim/slide_out_right</item>

        <!--<item name="android:windowEnterAnimation">@anim/slide_in_right</item>-->
        <!--<item name="android:windowExitAnimation">@anim/slide_out_right</item>-->
    </style>

    <!-- 透明页面 -->
    <style name="otherPageStyle" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="FirstPageStyle" parent="AppTheme">
        <item name="android:windowBackground">@drawable/layout</item>
    </style>

    <!--自定义的带下划线的TapLayout-->
    <style name="MyCustomAppBarTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">300dp</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">@color/blue_light</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>
    <!--自定义的带下划线的TapLayout-->
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">300dp</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>
    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#e0e0e0</item>
        <item name="textAllCaps">true</item>
    </style>

    <!--自定义dialog样式-->
    <style name="dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textSize">18sp</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:width">120dp</item>
        <item name="android:height">120dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--直接作用在EditText的Theme属性可以改变底部线条颜色-->
    <style name="MyEditTextStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <!--这两个属性设置底部颜色-->
        <!--正常状态-->
        <item name="colorControlNormal">@color/blue_light</item>
        <!--激活状态-->
        <item name="colorControlActivated">@color/blue_light</item>
        <!--改变字体颜色-->
        <item name="android:textColorPrimary">@color/blue_light</item>
    </style>


    <!--TextInputLayout属性-->
    <style name="MyCounterStyle">
        <item name="android:textColor">@color/darkslategrey</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="MyErrorStyle">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="MyCounterOverFlowStyle">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
