<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@drawable/bg_rectangle"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.idear.move.myWidget.RoundImageViewByXfermode
        android:layout_width="50dp"
        android:layout_height="50dp"
        tools:src="@drawable/rina"
        android:layout_marginStart="25dp"
        android:layout_centerVertical="true"
        android:id="@+id/avatar"
        app:borderRadius="20dp"
        app:type="circle" />
    <RelativeLayout
        android:layout_toEndOf="@+id/avatar"
        android:id="@+id/ll"
        android:layout_marginStart="25dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="vertical"
        >
        <TextView
            tools:text="id"
            android:textColor="@color/gray"
            android:textSize="12sp"
            android:id="@+id/id"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            tools:text="nickname"
            android:id="@+id/nickname"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <Button
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="7dp"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:textSize="12sp"
        android:typeface="monospace"
        android:textColor="@drawable/register_text_selector"
        android:background="@drawable/corner_button_template_register"
        android:text="关注"
        android:id="@+id/concernOtherBtn"
        />
</RelativeLayout>