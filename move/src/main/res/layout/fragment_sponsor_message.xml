<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <com.idear.move.myWidget.NoScrollViewPager
            android:id="@+id/view_pager_message"
            android:layout_below="@+id/tab_layout_fl_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.idear.move.myWidget.NoScrollViewPager>
        <RelativeLayout
            android:id="@+id/tab_layout_fl_message"
            android:background="@color/blue_light"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolBarHeight"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
                <android.support.design.widget.TabLayout
                    android:id="@+id/tab_layout_message"
                    android:layout_width="100dp"
                    android:layout_height="@dimen/toolBarHeight"
                    android:layout_gravity="center"
                    app:tabTextAppearance="@style/TabLayoutNormalTextStyle"
                    app:tabIndicatorHeight="2.5dp"
                    app:tabIndicatorColor="@color/white"
                    app:tabSelectedTextColor="@color/white"
                    app:tabTextColor="@color/normal_white">
                </android.support.design.widget.TabLayout>
        </RelativeLayout>
</RelativeLayout>