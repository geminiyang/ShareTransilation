<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2.5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="2.5dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:showDividers="middle"
            android:dividerPadding="0dp"
            android:divider="@drawable/template_divider_horizontal_grey"
            android:orientation="vertical"
            android:padding="5dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/iv_user_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="5dp"
                    tools:src="@drawable/paintbox"
                    />
                <TextView
                    android:layout_toEndOf="@+id/iv_user_icon"
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_centerVertical="true"
                    android:text="峡湾仔"
                    />
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_centerVertical="true"
                    android:text="2017.6.11"
                    />
            </RelativeLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@color/light_grey"
                >
                <ImageView
                    android:id="@+id/pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/family"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    />
                <TextView
                    android:id="@+id/state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:textColor="@color/red"
                    android:layout_margin="3dp"
                    tools:text="我就是标题"
                    android:textSize="14sp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground" />
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="end"
                >
                <ImageView
                    android:id="@+id/iv_thumbUpIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    app:srcCompat="@drawable/ic_thumb_up_white_24dp"
                    android:tint="#483d8b"
                    android:layout_gravity="center"
                    />
                <ImageView
                    android:id="@+id/iv_commentIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    app:srcCompat="@drawable/ic_comment_white_24dp"
                    android:tint="#483d8b"
                    android:layout_gravity="center"
                    />
                <ImageView
                    android:id="@+id/iv_favoriteIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    app:srcCompat="@drawable/ic_favorite_white_24dp"
                    android:tint="#483d8b"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
            <com.idear.move.myWidget.CommentTextView
                android:id="@+id/commentTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minWidth="40dp"
                app:nameLabel="大丸子"
                app:commentContent="一级棒"
                />
            <TextView
                android:id="@+id/tv_more_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="查看全部评论"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
