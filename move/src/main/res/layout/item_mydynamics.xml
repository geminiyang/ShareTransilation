<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    app:cardElevation="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="5dp">
    <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:showDividers="middle"
         android:dividerPadding="0dp"
         android:divider="@drawable/template_divider_horizontal_grey"
         android:orientation="vertical"
         >
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="66dp"
             android:orientation="horizontal"
             >
             <ImageView
                 android:id="@+id/iv_user_icon"
                 android:paddingStart="6dp"
                 android:paddingEnd="6dp"
                 android:paddingTop="6dp"
                 android:layout_width="60dp"
                 android:layout_height="60dp"
                 tools:src="@drawable/paintbox"
                 />
             <LinearLayout
                 android:layout_toEndOf="@+id/iv_user_icon"
                 android:layout_marginStart="10dp"
                 android:layout_centerVertical="true"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:gravity="center_vertical"
                 android:orientation="vertical"
                 >
                 <TextView
                     android:id="@+id/tv_username"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="@color/black"
                     android:textSize="16sp"
                     android:text="峡湾仔"
                     />
                 <TextView
                     android:id="@+id/tv_time"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="5dp"
                     android:textSize="12sp"
                     android:text="2017.6.11"
                     />
             </LinearLayout>
             <LinearLayout
                 android:layout_alignParentEnd="true"
                 android:layout_centerVertical="true"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center_vertical"
                 android:orientation="horizontal"
                 >
                 <ImageView
                     android:id="@+id/thumbUpIcon"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginStart="10dp"
                     app:srcCompat="@drawable/ic_thumb_up_white_24dp"
                     android:tint="#483d8b"
                     android:layout_gravity="center"
                     />
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginStart="10dp"
                     android:layout_gravity="center_vertical"
                     android:text="2"
                     />
                 <ImageView
                     android:id="@+id/favoriteIcon"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginStart="10dp"
                     app:srcCompat="@drawable/ic_favorite_white_24dp"
                     android:tint="#483d8b"
                     android:layout_gravity="center"
                     />
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginStart="10dp"
                     android:layout_marginEnd="10dp"
                     android:layout_gravity="center_vertical"
                     android:text="2"
                     />
             </LinearLayout>
         </RelativeLayout>
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:padding="8dp"
             >
             <TextView
                 android:id="@+id/dynamicContent"
                 android:layout_marginStart="60dp"
                 android:layout_marginBottom="5dp"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 tools:text="我就是动态内容"
                 android:textSize="12sp"
                 android:clickable="true"
                 android:foreground="?android:attr/selectableItemBackground" />
             <ImageView
                 android:layout_below="@id/dynamicContent"
                 android:id="@+id/pic"
                 android:layout_marginStart="60dp"
                 android:layout_width="250dp"
                 android:layout_height="125dp"
                 android:src="@drawable/family"
                 android:scaleType="centerCrop"
                 />
         </RelativeLayout>
         <TextView
            android:gravity="center_horizontal"
            android:id="@+id/tv_more_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/blue_light"
            android:text="查看全部评论"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>
