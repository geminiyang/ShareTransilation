<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/gradient"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/title_bar_blue"
        android:theme="@style/Theme.ToolBar"
        app:title=""
        app:titleTextColor="@color/white"
        app:layout_scrollFlags="scroll|enterAlways"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ic_arrow_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_arrow_back_white_24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                />
            <View
                android:id="@+id/divider_view"
                android:layout_width="0.8dp"
                android:layout_height="23dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/ic_arrow_back"
                android:background="@color/divider_view_color"
                />
            <TextView
                android:layout_toEndOf="@+id/divider_view"
                android:id="@+id/forget_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:text="忘记密码"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <EditText
        android:id="@+id/phone_number"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:hint="手机号码"
        android:inputType="phone"
        android:textSize="12sp"
        android:background="@null"
        android:drawableBottom="@drawable/edit_line"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColorHint="@color/select_grey"
        android:textColor="@color/select_grey"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/password"
        android:layout_below="@+id/phone_number"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:hint="输入密码"
        android:textSize="12sp"
        android:background="@null"
        android:drawableBottom="@drawable/edit_line"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColorHint="@color/select_grey"
        android:textColor="@color/select_grey"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:inputType="textPassword"
        />
    <EditText
        android:id="@+id/password_reconfirm"
        android:layout_below="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:hint="确认密码"
        android:textSize="12sp"
        android:background="@null"
        android:drawableBottom="@drawable/edit_line"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColorHint="@color/select_grey"
        android:textColor="@color/select_grey"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:inputType="textPassword"
        />
        <Button
            android:layout_below="@id/password_reconfirm"
            android:id="@+id/identify_bt"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:text="提交确认"
            android:textSize="12sp"
            android:textColor="@drawable/login_text_selector"
            android:background="@drawable/corner_button_template_login"
            />
</RelativeLayout>
