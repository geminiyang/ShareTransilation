<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolBarHeight"
        android:background="@color/title_bar_blue"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ic_arrow_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_arrow_back_white_24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                />
            <View
                android:id="@+id/divider_view"
                android:layout_width="0.8dp"
                android:layout_height="23dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/ic_arrow_back"
                android:background="@color/divider_view_color"
                />
            <TextView
                android:layout_toEndOf="@+id/divider_view"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:text="修改密码"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <EditText
        android:id="@+id/email"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:hint="邮箱"
        android:maxLength="26"
        android:maxEms="26"
        android:maxLines="1"
        android:singleLine="true"
        android:inputType="textEmailAddress"
        android:textCursorDrawable="@null"
        android:textSize="14sp"
        android:textColorHint="@color/blue_light"
        android:textColor="@color/blue_light"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:drawableBottom="@drawable/edit_line_blue"
        />
    <LinearLayout
        android:layout_below="@+id/email"
        android:id="@+id/ll_identifyCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/identifyCode"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:hint="请验证邮箱后再提交"
            android:singleLine="true"
            android:maxEms="4"
            android:maxLength="4"
            android:maxLines="1"
            android:textCursorDrawable="@null"
            android:textSize="14sp"
            android:textColorHint="@color/blue_light"
            android:textColor="@color/blue_light"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:drawableBottom="@drawable/edit_line_blue"
            />
        <Button
            android:id="@+id/getCode"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:text="获取验证码"
            android:textColor="@drawable/register_text_selector"
            android:background="@drawable/corner_button_template_register"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/old_password"
        android:layout_below="@+id/ll_identifyCode"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:hint="旧密码"
        android:maxLength="26"
        android:maxEms="26"
        android:maxLines="1"
        android:singleLine="true"
        android:inputType="textPassword"
        android:textCursorDrawable="@null"
        android:textSize="14sp"
        android:textColorHint="@color/blue_light"
        android:textColor="@color/blue_light"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:drawableBottom="@drawable/edit_line_blue"
        />
    <EditText
        android:id="@+id/new_password"
        android:layout_below="@+id/old_password"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:hint="新密码"
        android:maxLength="26"
        android:maxEms="26"
        android:maxLines="1"
        android:singleLine="true"
        android:inputType="textPassword"
        android:textCursorDrawable="@null"
        android:textSize="14sp"
        android:textColorHint="@color/blue_light"
        android:textColor="@color/blue_light"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:drawableBottom="@drawable/edit_line_blue"
        />
    <EditText
        android:id="@+id/password_reconfirm"
        android:layout_below="@+id/new_password"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:hint="确认密码"
        android:maxLength="26"
        android:maxEms="26"
        android:maxLines="1"
        android:singleLine="true"
        android:textCursorDrawable="@null"
        android:inputType="textPassword"
        android:textSize="14sp"
        android:textColorHint="@color/blue_light"
        android:textColor="@color/blue_light"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:drawableBottom="@drawable/edit_line_blue"
        />
    <Button
        android:layout_below="@+id/password_reconfirm"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:text="提交"
        android:textSize="12sp"
        android:textColor="@drawable/register_text_selector"
        android:background="@drawable/corner_button_template_register"
        />
</RelativeLayout>

