<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="165dp"
    android:layout_marginBottom="1dp"
    app:cardElevation="1dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        >
        <RelativeLayout
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <com.idear.move.myWidget.RoundImageViewByXfermode
                android:id="@+id/userImg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/paintbox"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                app:type="circle"
                app:picWidth="40dp"
                app:picHeight="40dp"
                />
            <RelativeLayout
                android:layout_toEndOf="@+id/userImg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_centerVertical="true"
                >
                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/NickNameExamStr"
                    />
                <com.idear.move.myWidget.UpdateTimeTextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:textSize="12sp"
                    android:text="@string/TimeExampleStr"
                    />
            </RelativeLayout>
            <Button
                android:id="@+id/replyBtn"
                android:layout_alignParentEnd="true"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:textSize="12sp"
                android:textColor="@drawable/register_text_selector"
                android:background="@drawable/corner_button_template_register"
                android:text="回复"
                />
        </RelativeLayout>
        <TextView
            android:layout_above="@+id/abbreviatedItem"
            android:id="@+id/commentContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:maxLength="25"
            android:maxLines="1"
            android:textSize="15sp"
            android:text="这里用来填写评论"
            />
        <LinearLayout
            android:id="@+id/abbreviatedItem"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/bg_rect"
            android:layout_width="wrap_content"
            android:layout_height="60dp">
            <ImageView
                android:id="@+id/pic"
                android:padding="8dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:visibility="visible"
                android:src="@drawable/note"
                android:background="@color/light_grey"
                />
            <TextView
                android:id="@+id/breviary_content"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="@string/companySummer"
                android:layout_marginEnd="5dp"
                android:maxLines="3"
                android:maxLength="65"
                android:layout_marginStart="30dp" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
