<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:showDividers="middle|end"
    android:dividerPadding="0dp"
    android:divider="@drawable/template_divider_horizontal_grey"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/publishInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="5dp"
        >
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/userIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            tools:src="@drawable/paintbox"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_toEndOf="@+id/userIcon"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                android:text="峡湾仔"
                />
            <TextView
                android:id="@+id/publishTime"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="2017.6.11"
                />
        </RelativeLayout>
        <Button
            android:id="@+id/attention"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="关注"
            android:textColor="@color/tras_black"
            android:background="@drawable/edit_rect"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        <com.idear.move.myWidget.MySpannableTextView
            android:id="@+id/dynamicContent"
            android:padding="5dp"
            android:layout_marginStart="55dp"
            android:layout_marginEnd="10dp"
            android:textSize="11sp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/testString"
            />
        <ImageView
            android:layout_below="@+id/dynamicContent"
            android:id="@+id/dynamicPic"
            android:layout_marginStart="60dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="240dp"
            android:layout_height="120dp"
            android:src="@drawable/family"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            />
        <RelativeLayout
            android:layout_below="@id/dynamicPic"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="赞:"
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="50dp">

                <com.idear.move.myWidget.RoundImageViewByXfermode
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="5dp"
                    android:src="@mipmap/c"
                    app:type="circle"
                    app:picHeight="32dp"
                    app:picWidth="32dp"
                    />

                <com.idear.move.myWidget.RoundImageViewByXfermode
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="10dp"
                    android:src="@mipmap/c"
                    app:type="circle"
                    app:picHeight="32dp"
                    app:picWidth="32dp"
                    />

                <com.idear.move.myWidget.RoundImageViewByXfermode
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="10dp"
                    android:src="@mipmap/c"
                    app:type="circle"
                    app:picHeight="32dp"
                    app:picWidth="32dp"
                    />

                <com.idear.move.myWidget.RoundImageViewByXfermode
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="10dp"
                    android:src="@mipmap/c"
                    app:type="circle"
                    app:picHeight="32dp"
                    app:picWidth="32dp"
                    />

                <com.idear.move.myWidget.RoundImageViewByXfermode
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="10dp"
                    android:src="@mipmap/c"
                    app:type="circle"
                    app:picHeight="32dp"
                    app:picWidth="32dp"
                    />

                <com.idear.move.myWidget.RoundImageViewByXfermode
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="10dp"
                    android:src="@mipmap/c"
                    app:type="circle"
                    app:picHeight="32dp"
                    app:picWidth="32dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/thumbUpIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="20dp"
                    android:tint="@color/blue_light"
                    app:srcCompat="@drawable/ic_thumb_up_white_24dp" />

                <ImageView
                    android:id="@+id/favoriteIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    android:tint="@color/blue_light"
                    app:srcCompat="@drawable/ic_favorite_white_24dp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
