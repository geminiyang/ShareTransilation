<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/root_rl"
    android:background="@drawable/gradient">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolBarHeight"
        android:background="@color/title_bar_blue"
        android:theme="@style/Theme.ToolBar"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ic_arrow_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_arrow_back_white_24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:backgroundTint="@color/white"
                />
            <View
                android:id="@+id/divider_view"
                android:layout_width="0.8dp"
                android:layout_height="23dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/ic_arrow_back"
                android:background="@color/divider_view_color"
                />
            <TextView
                android:layout_toEndOf="@+id/divider_view"
                android:id="@+id/more_spread_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:text="注册"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <EditText
        android:id="@+id/email"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:hint="邮箱"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:maxLines="1"
        android:maxLength="26"
        android:maxEms="26"
        android:textSize="14sp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textCursorDrawable="@null"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:drawableBottom="@drawable/edit_line"
        />
    <LinearLayout
        android:layout_below="@+id/email"
        android:id="@+id/ll_identifyCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/identifyCode"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:hint="验证码"
            android:singleLine="true"
            android:maxLines="1"
            android:maxLength="26"
            android:maxEms="26"
            android:textSize="14sp"
            android:textCursorDrawable="@null"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:cursorVisible="true"
            android:drawableBottom="@drawable/edit_line"
            />
        <Button
            android:id="@+id/getCode"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:text="获取验证码"
            android:textColor="@drawable/login_text_selector"
            android:background="@drawable/corner_button_template_login"
            />
    </LinearLayout>
    <Button
        android:layout_below="@+id/ll_identifyCode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:id="@+id/bt_next_step"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:text="下一步"
        android:textSize="12sp"
        android:textColor="@drawable/login_text_selector"
        android:background="@drawable/corner_button_template_login"
        />

</RelativeLayout>
